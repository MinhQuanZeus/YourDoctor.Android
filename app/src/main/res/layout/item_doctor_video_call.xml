<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ronaldo" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_status"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignEnd="@+id/iv_avatar"
        android:src="@drawable/circle_green_line"
        android:layout_marginEnd="6dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />
    <TextView
        android:id="@+id/tv_doctor_name"
        android:text="Ronaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/iv_avatar"/>
    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_below="@+id/tv_doctor_name"
        android:layout_toEndOf="@+id/iv_avatar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:paddingTop="5dp"
        android:rating="4.5"
        android:stepSize="0.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />
    <ImageView
        android:id="@+id/iv_call"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_video_call_black_24dp"/>
</RelativeLayout>