<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center_vertical"
    android:layout_margin="10dp"
    android:background="@color/gray200">
    <TextView
        android:layout_alignParentStart="true"
        android:id="@+id/tvNumberRank"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/ivItemDoctorFavorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvNumberRank"/>

    <TextView
        android:id="@+id/tvNameDoctorFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivItemDoctorFavorite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tvNameDoctorSpecialist"
        android:layout_below="@id/tvNameDoctorFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/ivItemDoctorFavorite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <RatingBar
        android:id="@+id/rbDoctorFavorite"
        style="@style/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameDoctorSpecialist"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/ivItemDoctorFavorite"
        android:layout_marginTop="5dp"
        android:isIndicator="true"
        android:progressTint="@color/duskYellow" />

</RelativeLayout>