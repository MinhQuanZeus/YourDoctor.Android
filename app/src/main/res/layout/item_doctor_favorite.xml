<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:gravity="center_vertical"
    android:layout_margin="10dp"
    android:background="@color/gray200">
    <TextView
        android:layout_alignParentStart="true"
        android:id="@+id/tv_number_rank"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/iv_item_doctor_favorite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_number_rank"/>

    <TextView
        android:id="@+id/tv_name_doctor_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_item_doctor_favorite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_name_doctor_specialist"
        android:layout_below="@id/tv_name_doctor_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/iv_item_doctor_favorite"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <RatingBar
        android:id="@+id/rb_doctor_favorite"
        style="@style/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_doctor_specialist"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_item_doctor_favorite"
        android:layout_marginTop="5dp"
        android:isIndicator="true"
        android:progressTint="@color/duskYellow" />

</RelativeLayout>